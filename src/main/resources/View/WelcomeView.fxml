<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="welcomeRoot" prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.WelcomeController">
    <children>
        <ImageView fitHeight="600.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="false">
            <image>
                <Image url="@/images/menuBackground.jpg" />
            </image>
        </ImageView>

        <VBox alignment="CENTER" spacing="20.0">
            <children>
                <Label text="Welcome to the Maze Game!" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="36.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="50.0" />
                    </VBox.margin>
                </Label>
                <Button onAction="#startGame" prefHeight="50.0" prefWidth="200.0" text="Start Game">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Button>
                <Button onAction="#showHelp" prefHeight="50.0" prefWidth="200.0" text="Help">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Button>
                <Button onAction="#showAbout" prefHeight="50.0" prefWidth="200.0" text="About">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Button>
                <Button onAction="#exitGame" prefHeight="50.0" prefWidth="200.0" text="Exit">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Button>
            </children>
        </VBox>
    </children>
</StackPane>